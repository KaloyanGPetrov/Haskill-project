@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 style="color: black; text-align: center; font-family: Arial, sans-serif;">@ViewData["Title"]</h1>
<body style="background-color: white; font-family: Arial, sans-serif;">
    <div class="row">
        <div class="col-md-4 offset-4" style="border: 2px solid #444; background-color: #1f1f1f; border-radius: 8px; padding: 20px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);">
            <section>
                <form id="account" method="post">
                    <hr style="border-top: 1px solid #555;">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"
                               style="background-color: #2b2b2b; color: #ffffff; border: 1px solid #555;">
                        <label asp-for="Input.Email" class="form-label" style="color: #c9c9c9;">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password"
                               style="background-color: #2b2b2b; color: #ffffff; border: 1px solid #555;">
                        <label asp-for="Input.Password" class="form-label" style="color: #c9c9c9;">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label" style="color: #c9c9c9;">
                            <input class="form-check-input" asp-for="Input.RememberMe" style="margin-right: 8px;">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary"
                                style="background-color: #8773e2; color: white; border: none; border-radius: 5px;">
                            Log in
                        </button>
                    </div>
                    <div>
                        <p style="text-align: center; margin-top: 10px;">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                               style="color: #8773e2; text-decoration: none;">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
